@namespace DDEyC_API.Views.Auth
@inject Microsoft.Extensions.Configuration.IConfiguration Configuration
@{
    ViewData["Title"] = "Reset Password";
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- jQuery CDN -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <link href="~/Assets/css/PasswordRecovery.css" rel="stylesheet" />
</head>
<body>
    <div class="w-100 d-flex flex-column justify-content-center align-items-center">
        <!-- Section that will be hidden after clicking the button -->
        <div class="w-100 d-flex flex-column justify-content-center align-items-center">
            <div class="w-100">
                @await Html.PartialAsync("HeaderPartial")
            </div>
            <div class="mainTitle d-flex justify-content-center align-items-center w-100">
                <h1 class="d-flex justify-content-center text-white">Recupera tu cuenta</h1>
            </div>
            <div id="containerForm" class="initialContent d-flex flex-column mt-5 justify-content-center align-items-center">
                <div class="w-100 d-flex flex-column justify-content-center align-items-center">
                    <label class="initialContent labelRecovery mt-2 w-75 text-center">Introduce tu dirección de correo electrónico para localizar tu cuenta</label>
                    <input type="email" class="initialContent email w-100 mt-2 rounded" placeholder="Correo electrónico" required />
                </div>
                <div id="optionButtons" class="w-100 mt-3 d-flex justify-content-between">
                    <!-- Button to send the recovery link -->
                    <button id="sendRecoveryLink" type="button" class="initialContent bg-primary text-white border-0 rounded">Enviar enlace de recuperación</button>
                    <!-- Button to go back -->
                    <button type="button" class="initialContent back bg-primary text-white border-0 rounded">Volver</button>
                </div>
            </div>
            <div class="initialContent divLogoSmall mt-1">
                <img class="logoGob" src="~/Assets/images/LOGOTIPO GOB MPAL.png" alt="logotipo_oficial_gob_chihuahua" />
            </div>
        </div>
        <!-- Confirmation message that will be displayed after successful submission -->
        <div class="successContent" style="display:none;">
            <div class="w-100 d-flex justify-content-around align-items-center">
                <div id="divLogo" class="mt-1">
                    <img id="logo" src="~/Assets/images/LOGOTIPO GOB MPAL.png" alt="logotipo_oficial_gob_chihuahua" />
                </div>
                <div class="m-5 w-50 d-flex flex-column justify-content-center align-items-center text-center">
                    <h1>Se envio el correo de verificación</h1>
                    <p>Revisa tu correo electrónico para reestablecer la contraseña</p>
                </div>
            </div>
            <div class="showInPhone">
                <img class="showInPhone" src="~/Assets/images/LOGOTIPO GOB MPAL.png" alt="logotipo_oficial_gob_chihuahua" />
            </div>
        </div>
        <!-- Error message -->
        <div class="alert alert-danger mt-3 w-50 text-center" id="errorMessage" style="display:none;">
        </div>
        
    </div>
    <script type="text/javascript">
        const backButtonUrl = "@Configuration["Urls:LoginPageUrl"]";

        // Asignar evento click al botón de "Volver"
        document.querySelector('.back').addEventListener('click', function () {
            window.location.href = backButtonUrl;
        });
    </script>
    <!-- Bootstrap JS and Popper.js as normal HTML -->
    <script src="https://cdn.jsdelivr.net/npm/popper.js@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/Assets/js/PasswordRecovery.js"></script>
</body>
</html>
