@namespace DDEyC_API.Views.Auth
@inject Microsoft.Extensions.Configuration.IConfiguration Configuration
@{
    ViewData["Title"] = "RegisterView";
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <link href="~/Assets/css/RegisterView.css" rel="stylesheet" />
</head>
<body>
    <div class="w-100 d-flex flex-column justify-content-center align-items-center">
        <div class="initial-content w-100">
            @await Html.PartialAsync("HeaderPartial")
        </div>
        
        <div class="main-title d-flex flex-column justify-content-center align-items-center w-100">
            <h1 class="font-monserrat text-white">Registrate</h1>
            <p class="font-monserrat text-white">Es rápido y sencillo.</p>
        </div>

        <!-- User Information Form -->
        <form id="registration-form" class="w-75" novalidate>
            <!-- Basic Information -->
            <div class="d-flex justify-content-between align-items-center w-100">
                <input id="input-name" class="font-monserrat user-info mt-2 mb-2" type="text" placeholder="Nombre" required />
                <input id="input-lastname" class="font-monserrat user-info mt-2 mb-2" type="text" placeholder="Apellido" required />
            </div>

            <!-- Contact and Security -->
            <div class="d-block w-100">
                <input id="input-email" class="font-monserrat dialog" type="email" placeholder="correo electrónico" required />
                <input id="input-password" class="font-monserrat dialog" type="password" placeholder="contraseña" required />
                <input id="input-confirm-password" class="font-monserrat dialog" type="password" placeholder="confirmar contraseña" required />
            </div>

            <!-- Password Advice -->
            <div class="font-monserrat d-flex flex-column justify-content-center align-items-center w-100">
                <p class="font-monserrat advice-text fw-bold text-center">
                    Para proteger tu cuenta, elige una contraseña segura que combine letras mayúsculas y minúsculas, 
                    números y simbolos. Esto hará que sea más dificil de adivinar y mucho más segura.
                </p>
            </div>

            <!-- Birth Date Section -->
            <div class="w-100 d-flex flex-column mt-2 mb-2">
                <h3>Fecha de nacimiento</h3>
                <div class="w-100 d-flex justify-content-between">
                    <!-- Day Dropdown -->
                    <div class="w-100 dropdown d-inline-block">
                        <button class="birthday-button btn dropdown-toggle d-flex justify-content-between align-items-center" 
                                type="button" 
                                id="dropdown-day" 
                                data-bs-toggle="dropdown" 
                                aria-expanded="false">
                            <span id="display-day" class="font-monserrat">Día</span>
                            <span class="dropdown-arrow"></span>
                        </button>
                        <ul id="options-day" class="dropdown-menu" aria-labelledby="dropdown-day">
                            <!-- Populated by JS -->
                        </ul>
                    </div>

                    <!-- Month Dropdown -->
                    <div class="w-100 dropdown d-inline-block mx-2">
                        <button class="birthday-button btn dropdown-toggle d-flex justify-content-between align-items-center" 
                                type="button" 
                                id="dropdown-month" 
                                data-bs-toggle="dropdown" 
                                aria-expanded="false">
                            <span id="display-month" class="font-monserrat">Mes</span>
                            <span class="dropdown-arrow"></span>
                        </button>
                        <ul id="options-month" class="dropdown-menu" aria-labelledby="dropdown-month">
                            <!-- Populated by JS -->
                        </ul>
                    </div>

                    <!-- Year Dropdown -->
                    <div class="w-100 dropdown d-inline-block">
                        <button class="birthday-button btn dropdown-toggle d-flex justify-content-between align-items-center" 
                                type="button" 
                                id="dropdown-year" 
                                data-bs-toggle="dropdown" 
                                aria-expanded="false">
                            <span id="display-year" class="font-monserrat">Año</span>
                            <span class="dropdown-arrow"></span>
                        </button>
                        <ul id="options-year" class="dropdown-menu" aria-labelledby="dropdown-year">
                            <!-- Populated by JS -->
                        </ul>
                    </div>
                </div>
            </div>

            <!-- Gender Selection -->
            <div class="w-100 d-flex flex-column mt-2 mb-2">
                <h3>Genero</h3>
                <div class="w-100 d-flex justify-content-between">
                    <button type="button" class="font-monserrat gender" data-gender="Mujer">Mujer</button>
                    <button type="button" class="font-monserrat gender mx-2" data-gender="Hombre">Hombre</button>
                    <button type="button" class="font-monserrat gender" data-gender="Otro">Otro</button>
                </div>
            </div>

            <!-- Form Actions -->
            <div class="w-100 d-flex justify-content-between mt-2 mb-2">
                <button type="submit" class="font-monserrat register-button bg-primary text-white border-0 rounded">
                    Registrarme
                </button>
                <button type="button" class="font-monserrat back-button bg-primary text-white border-0 rounded">
                    Volver
                </button>
            </div>
        </form>

        <!-- Messages -->
        <div id="message-success" class="alert alert-success w-50 text-center mt-3" style="display:none;"></div>
        <div id="message-error" class="alert alert-danger w-50 text-center mt-3" style="display:none;"></div>

        <!-- Logo -->
        <div class="logo-container d-flex h-100 mt-5 justify-content-center align-items-center">
            <img class="logo" src="~/Assets/images/LOGOTIPO GOB MPAL.png" alt="logotipo_oficial_gob_chihuahua" />
        </div>
    </div>

    <!-- Scripts -->
    <script>
        const LOGINPAGE = "@Html.Raw(ViewData["LoginPageUrl"])";
        const BACK_BUTTON_URL = "@Configuration["Urls:LoginPageUrl"]";
    </script>
    <script src="~/Assets/js/RegisterView.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>