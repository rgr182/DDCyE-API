@namespace DDEyC_API.Views.Auth
@{
    ViewData["Title"] = "Reset Password";
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- jQuery CDN -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <link href="~/Assets/css/PasswordRecovery.css" rel="stylesheet" />
</head>
<body>
    <div class="w-100 d-flex flex-column justify-content-center align-items-center">
        <!-- Section that will be hidden after clicking the button -->
        <div class="w-100 d-flex flex-column justify-content-center align-items-center">
            <div class="initialContent w-100 bg-secondary" style="height:150px;"></div>
            <div class="mainTitle d-flex justify-content-center align-items-center w-100">
                <h1 class="fw-bold display-3 text-white">Recupera tu cuenta</h1>
            </div>
            <div class="d-flex flex-column mt-5 w-50 justify-content-center align-items-center">
                <div class="w-100 d-flex flex-column justify-content-center align-items-center">
                    <label class="initialContent labelRecovery mt-2 fw-bold w-75 text-center">Introduce tu dirección de correo electrónico para localizar tu cuenta</label>
                    <input type="email" id="email" class="initialContent w-100 mt-2 border-1 rounded" placeholder="Correo electrónico" required />
                </div>
                <div class="w-100 mt-3 d-flex justify-content-between">
                    <!-- Button to send the recovery link -->
                    <button id="sendRecoveryLink" type="button" class="initialContent bg-primary fw-bold text-white border-0 rounded">Enviar enlace de recuperación</button>
                    <!-- Button to go back -->
                    <button type="button" class="initialContent back bg-primary fw-bold text-white border-0 rounded">Volver</button>
                </div>
            </div>
            <div id="logoGob" class="position-relative d-flex w-50 h-100 mt-5 justify-content-end align-items-center">
                <img class="w-100" src="~/Assets/images/LOGOTIPO GOB MPAL.png" alt="logotipo_oficial_gob_chihuahua" />
            </div>
        </div>
        <!-- Confirmation message that will be displayed after successful submission -->
        <div id="successContent" style="display:none;">
            <div class="w-100 d-flex justify-content-around align-items-center">
                <div class="m-5 bg-secondary" style="width:455px; height:192px;"></div>
                <div class="m-5 w-50 d-flex flex-column justify-content-center align-items-center text-center">
                    <h1>Se envio el correo de verificación</h1>
                    <p>Revisa tu correo electrónico para reestablecer la contraseña</p>
                </div>
            </div>
        </div>
        <!-- Error message -->
        <div class="alert alert-danger mt-3 w-50 text-center" id="errorMessage" style="display:none;">
        </div>
    </div>
    <!-- Bootstrap JS and Popper.js as normal HTML -->
    <script src="https://cdn.jsdelivr.net/npm/popper.js@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Script to send data with jQuery -->
    <script>
        $(document).ready(function () {
            $('#sendRecoveryLink').on('click', function () {
                var email = $('#email').val();
                var emailRegex = /^[^\s@@]+@@[^\s@@]+\.[^\s@@]+$/;

                // Validate if the email input is empty
                if (!email) {
                    $('#errorMessage').text("Please enter your email address.").show();
                    return;
                }

                // Validate the email format
                if (!emailRegex.test(email)) {
                    $('#errorMessage').text("Please enter a valid email address.").show();
                    return;
                }

                // Send the AJAX request to the backend
                $.ajax({
                    url: '/api/auth/passwordRecovery',
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify(email),
                    success: (response) => {
                        // Hide initial content and show success message
                        $('.initialContent').fadeOut(400, function () {
                            $('#successContent').fadeIn(400);
                            $('#errorMessage').hide();
                        });
                    },
                    error: function (xhr, status, error) {
                        // Handle different error responses based on status code
                        if (status === 0) {
                            $('#errorMessage').text("You are offline. Check your connection and try again.").show();
                        } else if (xhr.status === 404) {
                            $('#errorMessage').text("No account found with that email address.").show();
                        } else if (xhr.status === 500) {
                            $('#errorMessage').text("Server error. Try again later.").show();
                        } else if (xhr.status === 408) {
                            $('#errorMessage').text("The server is not responding. Try again later.").show();
                        } else {
                            $('#errorMessage').text("An error occurred. Try again.").show();
                        }
                        $('#successContent').hide();
                    }
                });
            });
        });
    </script>
</body>
</html>
