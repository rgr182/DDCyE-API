@namespace DDEyC_API.Views.Auth
@{
    ViewData["Title"] = "Restablecer Contraseña";
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- jQuery CDN -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <link href="~/Assets/css/PasswordRecovery.css" rel="stylesheet" />
</head>
<body>
    <div class="w-100 d-flex flex-column justify-content-center align-items-center">
        <!-- Sección que se ocultará al hacer clic en el botón -->
        <div class="w-100 d-flex flex-column justify-content-center align-items-center">
            <div class="initialContent w-100 bg-secondary" style="height:150px;"></div>
            <div class="mainTitle d-flex justify-content-center align-items-center w-100">
                <h1 class="fw-bold display-3 text-white">Recuperar tu cuenta</h1>
            </div>
            <div class="d-flex flex-column mt-5 w-50 justify-content-center align-items-center">
                <div class="w-100 d-flex flex-column justify-content-center align-items-center">
                    <label class="initialContent labelRecovery mt-2 fw-bold w-75 text-center">Introduce tu dirección de correo electrónico para localizar tu cuenta</label>
                    <input type="email" id="email" class="initialContent w-100 mt-2 border-1 rounded"placeholder=" correo electrónico " required />
                </div>
                <div class="w-100 mt-3 d-flex justify-content-between">
                    <button id="sendRecoveryLink" type="button" class="initialContent bg-primary fw-bold text-white border-0 rounded">Enviar enlace de recuperación</button>
                    <button type="button" class="initialContent back bg-primary fw-bold text-white border-0 rounded">Volver</button>
                </div>
            </div>
            <div class="initialContent mt-5 bg-secondary" style="min-width:300px; width:444px; height:192px"></div>
        </div>
        <!-- Mensaje de confirmación que se mostrará después del envío exitoso -->
        <div id="successContent" style="display:none;">
            <div class="w-100 d-flex justify-content-around align-items-center">
                <div class="m-5 bg-secondary" style="width:455px; height:192px;"></div>
                <div class="m-5 w-50 d-flex flex-column justify-content-center align-items-center text-center">
                    <h1>Se envió el correo de verificación</h1>
                    <p>Revisa tu correo electrónico para restablecer la contraseña</p>
                </div>
            </div>
        </div>
        <!-- Mensaje de error -->
        <div class="alert alert-danger mt-3 w-50 text-center" id="errorMessage" style="display:none;">
        </div>
    </div>
    <!-- Bootstrap JS y Popper.js como HTML normal -->
    <script src="https://cdn.jsdelivr.net/npm/popper.js@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Script para enviar datos con jQuery -->
    <script>
        $(document).ready(function () {
            $('#sendRecoveryLink').on('click', function () {
                var email = $('#email').val();
                var emailRegex = /^[^\s@@]+@@[^\s@@]+\.[^\s@@]+$/;
                if (!email) {
                    $('#errorMessage').text("Por favor, ingrese su correo electrónico.").show();
                    return;
                }
                if (!emailRegex.test(email)) {
                    $('#errorMessage').text("Por favor, ingrese un correo electrónico válido.").show();
                    return;
                }
                // Enviar la solicitud AJAX al backend
                $.ajax({
                    url: '/api/auth/passwordRecovery',
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify(email),
                    success: (response) => {
                        $('.initialContent').fadeOut(400, function () {
                            $('#successContent').fadeIn(400);
                            $('#errorMessage').hide();
                        });
                    },
                    error: function (xhr, status, error) {
                        if (status === 0) {
                            $('#errorMessage').text("No tienes conexión a Internet. Revisa tu conexión e inténtalo nuevamente.").show();
                        } else if (xhr.status === 404) {
                            $('#errorMessage').text("No se ha encontrado una cuenta con ese correo electrónico.").show();
                        } else if (xhr.status === 500) {
                            $('#errorMessage').text("Error del servidor. Intenta de nuevo más tarde.").show();
                        } else if (xhr.status === 408) {
                            $('#errorMessage').text("El servidor no responde. Intenta nuevamente más tarde.").show();
                        } else {
                            $('#errorMessage').text("Ocurrió un error. Inténtalo de nuevo.").show();
                        }
                        $('#successContent').hide();
                    }
                });
            });
        });
    </script>
</body>
</html>
