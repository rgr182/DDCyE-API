@namespace DDEyC_API.Views.Auth
@{
    ViewData["Title"] = "Restablecer Contraseña";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- jQuery CDN -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script> <!-- CDN de jQuery -->
</head>
<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow-lg">
                    <div class="card-header bg-primary text-white">
                        <h2 class="text-center">Restablecer Contraseña</h2>
                    </div>
                    <div class="card-body">
                        <!-- Mensaje de error -->
                        @if (ViewData["Error"] != null)
                        {
                            <div class="alert alert-danger">
                                @ViewData["Error"]
                            </div>
                        }

                        <!-- Mensaje de éxito (Inicialmente oculto) -->
                        <div class="alert alert-success" id="successMessage" style="display:none;">
                            Contraseña restablecida con éxito.
                        </div>

                        <!-- Formulario de restablecimiento de contraseña -->
                        <div id="resetPasswordForm">
                            <div class="form-group mb-3">
                                <label for="newPassword" class="form-label">Nueva Contraseña</label>
                                <input type="password" class="form-control" id="newPassword" name="newPassword" required>
                            </div>
                            <input type="hidden" name="token" value="@ViewBag.Token" id="token" />
                            <div class="d-grid gap-2">
                                <button type="button" id="resetPasswordBtn" class="btn btn-primary btn-lg">Restablecer</button>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS y Popper.js como HTML normal -->
    <script src="https://cdn.jsdelivr.net/npm/popper.js@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Script para enviar datos con jQuery -->
    <script>
        $(document).ready(function () {
            console.log("jQuery is ready!");  // Para verificar que jQuery está cargado

            $('#resetPasswordBtn').on('click', function () {
                // Captura los valores del formulario
                var newPassword = $('#newPassword').val();
                var token = $('#token').val();

                // Verificar si los campos están completos
                if (newPassword === "") {
                    alert("Por favor, ingrese la nueva contraseña.");
                    return;
                }

                // Realiza la solicitud con jQuery.ajax
                $.ajax({
                    url: '/api/auth/resetPassword',
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify({
                        token: token,
                        newPassword: newPassword
                    }),
                    success: function (response) {
                        // Ocultar el formulario y mostrar el mensaje de éxito
                        $('#resetPasswordForm').hide();
                        $('#successMessage').show();
                    },
                    error: function (xhr, status, error) {
                        // Mostrar mensaje de error
                        var errorMessage = xhr.responseJSON?.title || 'Error al restablecer la contraseña';
                        alert(errorMessage);
                    }
                });
            });
        });
    </script>
</body>
</html>
