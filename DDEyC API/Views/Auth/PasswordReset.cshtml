@namespace DDEyC_API.Views.Auth
@{
    ViewData["Title"] = "Restablecer Contraseña";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow-lg">
                    <div class="card-header bg-primary text-white">
                        <h2 class="text-center">Restablecer Contraseña</h2>
                    </div>
                    <div class="card-body">
                        <!-- Mensaje de error -->
                        @if (ViewData["Error"] != null)
                        {
                            <div class="alert alert-danger">
                                @ViewData["Error"]
                            </div>
                        }

                        <!-- Mensaje de éxito -->
                        @if (ViewData["Success"] != null)
                        {
                            <div class="alert alert-success">
                                @ViewData["Success"]
                            </div>
                        }

                        <!-- Formulario de restablecimiento de contraseña -->
                        <form action="/api/auth/resetPassword" method="post">
                            <div class="form-group mb-3">
                                <label for="newPassword" class="form-label">Nueva Contraseña</label>
                                <input type="password" class="form-control" id="newPassword" name="newPassword" required>
                            </div>
                            <input type="hidden" name="token" value="@ViewBag.Token" />
                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-primary btn-lg">Restablecer</button>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS y Popper.js como HTML normal -->
    <script src="https://cdn.jsdelivr.net/npm/popper.js@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
