@* @namespace DDEyC_API.Views.Auth *@
@{
    ViewData["Title"] = "Restablecer Contraseña";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- jQuery CDN -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script> <!-- CDN de jQuery -->
    <link href="~/Assets/css/PasswordReset.css" rel="stylesheet" />
</head>
<body>
    <div class="d-flex flex-column justify-content-center align-items-center">
        <div class="d-flex flex-column mt-5 w-50 justify-content-center align-items-center">
            @*formulario de restablecimiento de contraseña *@
            <form id="resetPasswordForm" class="w-100 d-flex flex-column justify-content-center align-items-center">
                <input id="newPassword" type="password" class="w-100 mt-2" placeholder="Contraseña nueva" required />
                <input id="confirmPassword" type="password" class="w-100 mt-2" placeholder="Confirmar contraseña" required />
                <!-- Campo oculto para el token -->
                <input id="token" type="hidden" value="@ViewBag.Token" name="token" />
            </form>
            <div class="actionButton w-100 mt-3 d-flex justify-content-between">
                <button id="resetPasswordBtn" type="button" class="bg-primary fw-bold text-white border-0 rounded">Reenviar codigo</button>
                <button id="back" type="button" class="bg-primary fw-bold text-white border-0 rounded">Volver</button>
            </div>
        </div>
        <div id="successMessage" class="w-50 justify-content-center align-items-center mt-5 alert alert-success text-center p-3" role="alert">
            ¡Contraseña restablecida con éxito!
        </div>
        <div id="errorMessage" class="w-50 justify-content-center align-items-center mt-5 alert alert-danger text-center p-3" role="alert">
            Error al restablecer la contraseña !!!
        </div>
        <div id="logoGob" class="position-relative d-flex w-50 h-100 mt-5 justify-content-end align-items-center">
            <img class="w-100" src="~/Assets/images/LOGOTIPO GOB MPAL.png" alt="logotipo_oficial_gob_chihuahua" />
        </div>
    </div>

    <!-- Bootstrap JS y Popper.js como HTML normal -->
    <script src="https://cdn.jsdelivr.net/npm/popper.js@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Script para enviar datos con jQuery -->
    <script>
        $(document).ready(function () {
            $('#resetPasswordBtn').on('click', function () {
                // Captura los valores del formulario
                var newPassword = $('#newPassword').val();
                var confirmPassword = $('#confirmPassword').val();
                var token = $('#token').val();

                // Verificar si los campos están completos
                if (newPassword === "" || confirmPassword === "") {
                    $('#errorMessage').text("Por favor, complete ambos campos de contraseña.").show();
                    return;
                }
                if (newPassword !== confirmPassword) {
                    $('#errorMessage').text("Las contraseñas no coinciden.").show();
                    return;
                }

                // Realiza la solicitud con jQuery.ajax
                $.ajax({
                    url: '/api/auth/resetPassword',
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify({
                        token: token,
                        newPassword: newPassword
                    }),
                    success: function (response) {
                        // Ocultar el formulario y mostrar el mensaje de éxito
                        $('#resetPasswordForm').hide();
                        $('#successMessage').show();
                    },
                    error: function (xhr, status, error) {
                        // Mostrar mensaje de error
                        var errorMessage = xhr.responseJSON?.title || 'Error al restablecer la contraseña';
                        alert(errorMessage);
                    }
                });
            });
        });
    </script>
</body>
</html>
