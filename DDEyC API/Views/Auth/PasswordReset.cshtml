@* @namespace DDEyC_API.Views.Auth *@
@{
    ViewData["Title"] = "Restablecer Contraseña";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- jQuery CDN -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script> <!-- CDN de jQuery -->
</head>
<body>
    <div class="d-flex flex-column justify-content-center align-items-center">
        <div class="d-flex flex-column mt-5 w-50 justify-content-center align-items-center">
            <div class="w-100 d-flex flex-column justify-content-center align-items-center">
                <input type="password" class="w-100 mt-2" placeholder="Contraseña nueva" required />
                <input type="password" class="w-100 mt-2" placeholder="Confirmar contraseña" required />
            </div>
            <div class="w-100 mt-3 d-flex justify-content-between">
                <button type="button" class="bg-primary fw-bold text-white border-0 rounded" style="width: 45%; min-width:100px;">Reenviar codigo</button>
                <button type="button" class="bg-primary fw-bold text-white border-0 rounded" style="width: 45%; min-width:100px;">Volver</button>
            </div>
        </div>
        <div class="mt-5 bg-secondary" style="width:455px; height:192px;"></div>
    </div>

    <!-- Bootstrap JS y Popper.js como HTML normal -->
    <script src="https://cdn.jsdelivr.net/npm/popper.js@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Script para enviar datos con jQuery -->
    <script>
        $(document).ready(function () {
            console.log("jQuery is ready!");  // Para verificar que jQuery está cargado

            $('#resetPasswordBtn').on('click', function () {
                // Captura los valores del formulario
                var newPassword = $('#newPassword').val();
                var token = $('#token').val();

                // Verificar si los campos están completos
                if (newPassword === "") {
                    alert("Por favor, ingrese la nueva contraseña.");
                    return;
                }

                // Realiza la solicitud con jQuery.ajax
                $.ajax({
                    url: '/api/auth/resetPassword',
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify({
                        token: token,
                        newPassword: newPassword
                    }),
                    success: function (response) {
                        // Ocultar el formulario y mostrar el mensaje de éxito
                        $('#resetPasswordForm').hide();
                        $('#successMessage').show();
                    },
                    error: function (xhr, status, error) {
                        // Mostrar mensaje de error
                        var errorMessage = xhr.responseJSON?.title || 'Error al restablecer la contraseña';
                        alert(errorMessage);
                    }
                });
            });
        });
    </script>
</body>
</html>
