@{
    ViewData["Title"] = "HeaderPartial";
}

<div class="header-container">
    <!-- Container for the logos -->
    <div class="logos-container row">
        <!-- Logo 1 (left) -->
        <div class="col-4 d-flex justify-content-start align-items-center">
            <img src="~/Assets/images/LOGOTIPO GOB MPAL.png" alt="Logo 1" class="logo img-fluid">
        </div>

        <!-- Logo 2 (center) -->
        <div class="col-4 d-flex justify-content-center align-items-center">
            <img src="~/Assets/images/logo-idea-azul.webp" alt="Logo 2" class="logo img-fluid">
        </div>

        <!-- Logo 3 (right) -->
        <div class="col-4 d-flex justify-content-end align-items-center">
            <img src="~/Assets/images/logo-capital.webp" alt="Logo 3" class="logo img-fluid">
        </div>
    </div>

    <!-- Color strip below the logos -->
    <div class="color-strip"></div>
</div>

<!-- Link to the CSS file -->
<link rel="stylesheet" href="~/Assets/css/headerStyles.css">
